{% extends "base.html.twig" %}
{% block body %}
    <div class="clientes">
        <div class="cliente">
            <a href="{{ path("insertarIncidencia", {id: cliente.id}) }}" class="btn btn-info">Crear una incidencia a este cliente</a>
            <p>Nombre: {{ cliente.nombre }}</p>
            <p>Apellidos: {{ cliente.apellidos }}</p>
            <p>Teléfono: {{ cliente.telefono }}</p>
            <p>Dirección: {{ cliente.direccion }}</p>
            <h2> --- Incidencias --- </h2>
            {% for incidencia in cliente.incidencias %}
                <h2>------------</h2>
                <p>Titulo: {{ incidencia.titulo }}</p>
                <p>Fecha creacion: {{ incidencia.fechaCreacion | date('d-m-Y') }}</p>
                <p>Estado: {{ incidencia.estado }}</p>
                <p>Usuario: {{ incidencia.usuario.id }}</p>
                <p>Cliente: {{ incidencia.cliente.id }}</p>
                <a href="{{ path("editarIncidencia", {id: incidencia.id}) }}" class="btn btn-success">Editar</a>
                <a href="{{ path("borrarIncidencia", {id: incidencia.id}) }}" class="btn btn-danger">Borrar</a>
            {% endfor %}
        </div>
    </div>
{% endblock  %}
